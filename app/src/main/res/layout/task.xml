<?xml version="1.0" encoding="utf-8"?>
<com.example.mobilehomework.NoNestedScrollview
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/bg_l">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.youth.banner.Banner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/banner">

            </com.youth.banner.Banner>
            <LinearLayout
                android:id="@+id/ll_points"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#00000000"
                android:gravity="center"
                android:layout_gravity="bottom|center"
                android:orientation="horizontal" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/whiteBg"
            android:padding="10dp">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/redTab"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/blackText"
                android:textSize="18sp"
                android:text="路径选择"/>
        </LinearLayout>
        <View style="@style/DeepUnderLine"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
             <Spinner
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/spinner_lujing"
                 >

             </Spinner>

            </LinearLayout>
            <TextView
                android:id="@+id/task_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_back_right"
                android:text="对应长度"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/whiteBg"
            android:padding="10dp">

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/redTab" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/blackText"
                android:textSize="18sp"
                android:text="消耗热量"/>
        </LinearLayout>
        <View style="@style/DeepUnderLine"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kcal"
                    android:text="kcal"/>

            </LinearLayout>
            <TextView
                android:id="@+id/task_tep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_back_right"
                android:text="步行步数"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/whiteBg"
            android:padding="10dp">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/redTab"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/blackText"
                android:textSize="18sp"
                android:text="完成情况"/>

        </LinearLayout>
        <TextView
            android:layout_width="240dp"
            android:id="@+id/today_finish"
            android:layout_height="wrap_content"
            android:text="今日完成"/>


        <View style="@style/DeepUnderLine"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/whiteBg"
            android:padding="10dp">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/redTab"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/blackText"
                android:textSize="18sp"
                android:text="今日成绩"/>
        </LinearLayout>
        <View style="@style/DeepUnderLine"/>
<TextView
    android:text="今日完成的项目"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/finish_item"/>


    </LinearLayout>

</com.example.mobilehomework.NoNestedScrollview>